@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="input-group mt-4">
    <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
    <button type="button" class="btn btn-outline-primary" data-mdb-ripple-init>search</button>
</div>

<ul class="nav nav-tabs nav-justified mt-4" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
        <a data-mdb-tab-init
           class="nav-link active"
           id="ex3-tab-1"
           href="#ex3-tabs-1"
           role="tab"
           aria-controls="ex3-tabs-1"
           aria-selected="true"
           onclick=" tabClick('ex3-tab-1')">
           Abone Faturaları
       </a>
    </li>
    <li class="nav-item" role="presentation" id="tahsilat" >
        <a data-mdb-tab-init
           class="nav-link"
           id="ex3-tab-2"
           href="#ex3-tabs-2"
           role="tab"
           aria-controls="ex3-tabs-2"
           aria-selected="false"
           onclick=" tabClick('ex3-tab-2')">
            Abone Tahsilatları
        </a>
    </li>
</ul>
<!-- Tabs navs -->
<!-- Tabs content -->
<div class="tab-content" id="ex2-content">
    <div class="tab-pane fade show active"
         id="ex3-tabs-1"
         role="tabpanel"
         aria-labelledby="ex3-tab-1">
        Tab 1 content
    </div>
    <div class="tab-pane fade"
         id="ex3-tabs-2"
         role="tabpanel"
         aria-labelledby="ex3-tab-2">
        Tab 2 content
    </div>
</div>
<!-- Tabs content -->

<script>
    var userId = @ViewData["userId"];
    var userName = "@ViewData["user"]";
    var token = "@ViewData["token"]";

    import { Tab, initMDB } from "mdb-ui-kit";

    initMDB({ Tab });

    function tabClick(tabId) {
        // Tüm sekmelerin aria-selected değerini false yap
        var tabs = document.querySelectorAll('.nav-link');
        tabs.forEach(function (tab) {
            tab.setAttribute('aria-selected', 'false');
        });

        // Tıklanan sekmenin aria-selected değerini true yap
        var clickedTab = document.getElementById(tabId);
        clickedTab.setAttribute('aria-selected', 'true');
    }

</script>

<script src="~/js/area/sistem/abonesorgula.js"></script>