@model ABONE_LOGIN

@{
    Layout = null;

}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<div class="container text-center">
    <div class="mt-5">
        <h4>
            <img src="https://st4.depositphotos.com/15580188/31430/v/450/depositphotos_314304926-stock-illustration-electric-logo-initials-o.jpg"
                 alt="logo" width="100" height="100">
            Elektrik Dağıtım Abonelik İşlemleri
        </h4>


    </div>
</div>

<div class="container col-md-4 ">


    <form id="frmGirisForm" name="frmForm">

        <div class="mb-3">
            <label asp-for="Eposta" class="form-label">E-posta adresi</label>
            <input asp-for="Eposta" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="Eposta" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Sifre" class="form-label">Şifre</label>
            <input asp-for="Sifre" type="password" class="form-control">
            <span asp-validation-for="Sifre" class="text-danger"></span>
            <span id="txtUyariHataliGiris" class="text-danger collapse">(!) Kullanıcı adı veya Şifreniz Hatalı...</span>

        </div>


        <a id="btngiris" class="btn btn-primary">Giriş Yap</a>

    </form>


        <form id="frmLogin" action="/Home/Session_LoginSet" method="post">
            <input type="hidden" id="txtLogin" name="txtLogin" />
        </form>


    
</div>
<script src="~/js/home/index.js"></script>